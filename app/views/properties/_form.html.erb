<%= form_with(model: property) do |form| %>
  <%= render "layouts/validation", item: @property %>

  <div class="form-group">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form_control" %>
  </div>

  <div class="form-group">
    <%= form.label :address, style: "display: block" %>
    <%= form.text_field :address, class: "form_control" %>
  </div>

  <div class="form-group">
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price, class: "form_control" %>
  </div>

  <div class="form-group">
    <%= form.label :rooms, style: "display: block" %>
    <%= form.number_field :rooms, class: "form_control" %>
  </div>

  <div class="form-group">
    <%= form.label :bathrooms, style: "display: block" %>
    <%= form.number_field :bathrooms, class: "form_control" %>
  </div>

  <div class="form-group">
    <%= form.label :parking_spaces, style: "display: block" %>
    <%= form.number_field :parking_spaces, class: "form_control" %>
  </div>

  <div class="form-group">
    <%= form.label :details, style: "display: block" %>
    <%= form.text_area :details, class: "form_control" %>
  </div>
  
  <div class="form-group">
    <%=form.label :photo%>
    <%=form.file_field :photo, class: "form-control"%>
    <%# <%=form.hidden_field :photo_cache%> 

    <% if @property.photo.attached? %>
      <%= image_tag property.photo.variant(:thumb) %>
      <%# <%= image_tag property.photo.preview(:thumb) %> 

      <%end%>
  </div>

  <div class="form-group">
    <%= form.submit "Save Property", class: "btn btn-success" %>
  </div>
<% end %>
