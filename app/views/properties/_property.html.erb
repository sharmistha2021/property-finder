<%= image_tag property.photo.variant(
                                    resize_and_pad:[1840, 520]) %>


<div class="container pt-3">
<link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
  <div class="row">
     <div class="col-8">
      <div class="row">
        <div class="col-6">
          <p class="mb-0"><%= property.address%></p>
          <p class="h2"> <%= property.price > 0 ? number_to_currency(property.price, precision: 0) : "For Sale" %> </p>
        </div>
        <div class="col-6 text-center ">
        <div class="row mr-3 mt-3 bg-light p-3">
         <div class="col-4">
         <p class="m-0"><strong>Rooms</strong></p>
          <span class="lead"><%=property.rooms%></span>
        </div>
        <div class="col-4">
         <p class="m-0"><strong>Bathrooms</strong></p>
          <span class="lead"><%=property.bathrooms%></span>
        </div>
        <div class="col-4">
          <p class="m-0"><strong></i>parking_spaces</strong></p>
          
          <span class="lead"><%=property.parking_spaces%></span>
        </div>
        </div>
      </div>
      </div>
      <div class="row border-top border-bottom mt-5 mb-5 pt-4 pb-4">
        <div class="col-6">
          <strong><%= link_to "Est. Mothly Repayments of #{ number_to_currency((property.price-(property.price * 0.1))/360, precision: 0) }*", "#", class:"text-success"%></strong>
          </div>
        <div class="col-6 text-right">
        <strong><%= link_to "Can I afford this property?", "#", class: "text-success" %></strong>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <p class="h3"><%= property.name %></p>
           <p class="h5">Property Description</p>

           <div id="prop-details" class="">

          <%= simple_format @property.details %>
          </div>
          <button class="btn btn-outline-info mt-3" id="toggleDetails">Show more</button>
          <p class="mt-5">This number is based on a 30 year mortage,adipiscing elit, sed do eiusmod tempor incid dolore.Shorter tern mortage would require a higher monthly repayment magna aliqua. </p>
         </div>
        </div>
      </div>
    <div class="col-4">
      <%=render "properties/agent_details"%>
    </div>
  </div>
</div>